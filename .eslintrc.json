{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "warn",
        "eqeqeq": "error",
        "no-throw-literal": "warn",
        "semi": "error",
        "no-restricted-syntax": [ "error", "ForInStatement" ]
    }
}
